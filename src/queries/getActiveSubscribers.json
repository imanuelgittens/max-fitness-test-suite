[
  {
    "$match": {
      "active": true
    }
  },
  {
    "$lookup": {
      "from": "subscription",
      "let": {
        "memberReference": "$_id"
      },
      "pipeline": [
        {
          "$match": {
            "active": true,
            "$expr": {
              "$eq": ["$member.reference", "$$memberReference"]
            }
          }
        }
      ],
      "as": "activeSubscribers"
    }
  },
  {
    "$match": {
      "activeSubscribers": {
        "$ne": []
      }
    }
  },
  {
    "$project": {
      "_id": 1
    }
  }
]
